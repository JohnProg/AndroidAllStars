<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.belatrixsf.allstars.ui.login.LoginFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/softBlack">

        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_6_5"
            android:layout_marginLeft="@dimen/dimen_6_5"
            cardview:cardCornerRadius="@dimen/corner_radius"
            cardview:contentPadding="@dimen/dimen_6_5"
            cardview:cardElevation="@dimen/dimen_1_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_belatrix"
                    android:scaleType="center"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6_5">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/username"
                        android:hint="@string/hint_username"
                        android:paddingLeft="0dp"
                        android:drawableLeft="@drawable/ic_person_outline"
                        android:drawablePadding="@dimen/dimen_3_5"
                        android:imeOptions="actionNext"
                        style="@style/EditText"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6_5">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/password"
                        android:inputType="textVisiblePassword"
                        android:hint="@string/hint_password"
                        android:paddingLeft="0dp"
                        android:drawableLeft="@drawable/ic_lock_outline"
                        android:drawablePadding="@dimen/dimen_3_5"
                        android:imeOptions="actionDone"
                        style="@style/EditText"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/sign_in"
                    android:layout_marginTop="@dimen/dimen_10_5"
                    android:text="@string/button_sign_in"
                    style="@style/Button.Accent"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>
</ScrollView>
