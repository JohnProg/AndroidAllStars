<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_10_10"
    style="@style/ItemList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8">

        <ImageView
            android:id="@+id/contact_photo"
            android:layout_width="@dimen/dimen_10_6"
            android:layout_height="@dimen/dimen_10_6"
            android:contentDescription="@string/profile_image_content_desc"
            tools:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/contact_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/title_full_name" />

    </LinearLayout>

</android.support.v7.widget.CardView>
